{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/components*",
    "src/contexts*",
    "src/pages*",
    "src/hooks*",
    "src/utils*",
    "src/styles*",
    "src/main.tsx",
    "src/App.tsx",
    "src/api.ts",
    "src/graphql*",
    "src/types/session.d.ts",
    "node_modules"
  ]
}
